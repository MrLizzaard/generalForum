<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container board">
      <h2>자유게시판</h2>

      <table class="board-table">
        <thead>
          <tr>
            <th scope="col">제목</th>
            <th scope="col" class="date">작성날짜</th>
          </tr>
        </thead>

        <tbody>
          <% if(posts == null || posts.length == 0){ %>
          <tr>
            <td colspan="2">There is no data to show</td>
          </tr>
          <% } %>

          <!-- -->

          <% posts.forEach(post => { %>
          <tr>
            <td>
              <a href="/posts/<%= post._id %>"><div><%= post.title %></div></a>
            </td>
            <td class="date">
              <span data-date="<%= post.createdAt %>"></span>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <div>
        <a href="/posts/new" class="btn">New</a>
      </div>
    </div>
  </body>
</html>
