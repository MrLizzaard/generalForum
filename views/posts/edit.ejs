<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <div class="container container-edit board">
      <h2 class="mainTitle">자유게시판</h2>

      <form action="/posts/<%= post._id %>?_method=put" method="post">
        <div class="form-group">
          <label for="title">제목</label>
          <input type="text" id="title" name="title" value="<%= post.title %>" class="form-control" />
        </div>

        <div class="form-group">
          <label for="title">내용</label>
          <textarea type="text" id="body" name="body" rows="5" class="form-control"><%= post.body %></textarea>
        </div>

        <div>
          <a class="btn" href="/posts/<%= post._id %> ">Back</a>
          <button type="submit" class="btn">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
