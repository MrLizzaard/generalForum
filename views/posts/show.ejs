<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container container-show board">
      <h2 class="mainTitle">자유게시판</h2>

      <div class="card">
        <h5 class="card-title"><%= post.title %></h5>

        <div class="row">
          <div class="post-body"><%= post.body %></div>
          <div class="post-info">
            <div><span>Created</span> : <span data-date-time="<%= post.createdAt %>"></span></div>
            <% if(post.updatedAt) { %>
            <div><span>Updated</span> : <span data-date-time="<%= post.updatedAt %>"></span></div>
            <% } %>
          </div>
        </div>
      </div>

      <div>
        <a href="/posts" class="btn">Back</a>
        <a href="/posts/<%= post._id %>/edit" class="btn">Edit</a>
        <form action="/posts/<%= post._id %>?_method=delete" method="post">
          <a href="javascript:void(0)" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;" class="btn">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>
